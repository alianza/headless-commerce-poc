{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": [
      "cypress",
      "cypress-wait-until",
      "@testing-library/cypress"
    ]
  },
  "include": [
    "../node_modules/cypress",
    "./**/*.ts",
    "cypress",
    "@testing-library/cypress"
  ]
}
